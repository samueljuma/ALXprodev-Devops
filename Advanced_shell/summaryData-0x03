#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Loop through each JSON file in pokemon_data
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")
    
    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")
    
    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$report_file"
done

echo "CSV Report generated at: $report_file"
echo
cat "$report_file"
echo

# Calculate averages using awk
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    printf "\nAverage Height: %.2f m\n", sum_h/count
    printf "Average Weight: %.2f kg\n", sum_w/count
}' "$report_file"
